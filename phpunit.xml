<phpunit
    bootstrap="./tests/bootstrap.php"
    colors="true"
    stopOnFailure="true"
    stopOnError="true">

    <testsuites>
        <testsuite name="TheiaLive Test Suite">
            <directory suffix="php">./tests</directory>
        </testsuite>
    </testsuites>
    
    <filter>
        <whitelist>
            <directory suffix="php">./application/services</directory>
            <directory suffix="php">./application/modules/account/models</directory>
            <directory suffix="php">./application/modules/project/models</directory>
            <directory suffix="php">./application/modules/task/models</directory>
            <directory suffix="php">./application/modules/team/models</directory>
        </whitelist>
    </filter>

    <loging>
        <log type="coverage-html" target="./build/coverage" lowUpperBound="35" highLowerBound="70"/>
        <log type="testdox-text" target="./build/logs/testdox.txt"/>
    </loging>
</phpunit>
